# Django Environment
# Set to 'production' for production deployment, 'development' for local dev
# Defaults to 'development' if not set
DJANGO_ENV=development

# Django Settings
DJANGO_SECRET_KEY=change-me-in-prod
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1
CORS_ALLOW_ALL_ORIGINS=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require

# Cloudinary Configuration (for production media storage)
# Sign up at https://cloudinary.com/users/register_free to get free credentials
# Free tier: 25GB storage, 25GB bandwidth/month
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Database connection details (optional, if not using DATABASE_URL)
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=your-host
DB_PORT=5432
DB_NAME=your-db-name
DB_SSLMODE=require
